<Page x:Class="JCU.Internal.NavigationPage.LoanApplication"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JCU.Internal.NavigationPage"
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="JCU: Loan Application" Style="{StaticResource DefaultPageStyle}">

    <Page.Resources>
        <Style x:Key="SubHeader" TargetType="Label">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,15,0,0"/>
        </Style>
    </Page.Resources>
    <DockPanel>
        <ScrollViewer DockPanel.Dock="Left" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Padding="5,0">
            <StackPanel Orientation="Vertical" Visibility="{Binding CommandsVisibility, TargetNullValue=Hidden, FallbackValue=Hidden}">
                <TextBlock>
                        <Hyperlink Command="{Binding UnderReview}" CommandParameter="{Binding .}">Change Status To Under Review</Hyperlink>
                </TextBlock>
                <TextBlock>
                        <Hyperlink Click="DenyHyperlink_Click">Deny Application</Hyperlink>
                </TextBlock>
                <TextBlock>
                    <Hyperlink Click="ApproveHyperlink_Click">Approve Application / Begin Loan Agreement</Hyperlink>
                </TextBlock>
            </StackPanel>
        </ScrollViewer>
        <StackPanel DockPanel.Dock="Top" Orientation="Vertical" >
            <TextBlock Style="{StaticResource PageTitle}">Loan Application</TextBlock>
            <fa:ImageAwesome Icon="CircleOutlineNotch" Spin="True" Height="24" Width="24" Visibility="{Binding BusyVisibility}" Foreground="Navy" HorizontalAlignment="Left" />
        </StackPanel>
        <ScrollViewer VerticalScrollBarVisibility="Visible">
            <Grid x:Name="DetailGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Grid.Row="0">Application Date</Label>
                <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding ApplicationDate, StringFormat='yyyy-MM-dd', ValidatesOnDataErrors=True, NotifyOnValidationError=True}" MaxLength="10" Style="{StaticResource TextBoxWithError}" />
                <Label Grid.Column="0" Grid.Row="1">Application Status</Label>
                <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding ApplicationStatusDescription, Mode=OneWay}" IsReadOnly="True" BorderBrush="{x:Null}" BorderThickness="0" />
                <Label Grid.Column="0" Grid.Row="2">Application Amount</Label>
                <TextBox Grid.Column="1" Grid.Row="2" Text="{Binding Amount, StringFormat='###,###,###,##0.00#', ValidatesOnDataErrors=True, NotifyOnValidationError=True, TargetNullValue=''}" MaxLength="128" Style="{StaticResource TextBoxWithError}" />
                <Label Grid.Column="0" Grid.Row="3">Purpose</Label>
                <TextBox Grid.Column="1" Grid.Row="3" Text="{Binding Purpose, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" MaxLength="128" Style="{StaticResource TextBoxWithError}" />
                <Label Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="99" Style="{StaticResource SubHeader}">Primary Borrower</Label>
                <Label Grid.Column="0" Grid.Row="5">Borrower Name</Label>
                <TextBox Grid.Column="1" Grid.Row="5" Text="{Binding BorrowerName, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" MaxLength="1024" Style="{StaticResource TextBoxWithError}" />
                <Label Grid.Column="0" Grid.Row="6">Birth Date</Label>
                <TextBox Grid.Column="1" Grid.Row="6" Text="{Binding BorrowerBirthDate, StringFormat='yyyy-MM-dd', ValidatesOnDataErrors=True, NotifyOnValidationError=True, TargetNullValue=''}" MaxLength="10" Style="{StaticResource TextBoxWithError}" />
                <Label Grid.Column="0" Grid.Row="7">Email</Label>
                <TextBox Grid.Column="1" Grid.Row="7" Text="{Binding BorrowerEmailAddress, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" MaxLength="1024" Style="{StaticResource TextBoxWithError}" />
                <Label Grid.Column="0" Grid.Row="8">Phone</Label>
                <TextBox Grid.Column="1" Grid.Row="8" Text="{Binding BorrowerPhone, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" MaxLength="64" Style="{StaticResource TextBoxWithError}" />
                <Label Grid.Column="0" Grid.Row="9">Address</Label>
                <TextBox Grid.Column="1" Grid.Row="9" Text="{Binding BorrowerAddress, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" MaxLength="1024" Style="{StaticResource TextBoxWithError}" />
                <Label Grid.Column="0" Grid.Row="10">City</Label>
                <TextBox Grid.Column="1" Grid.Row="10" Text="{Binding BorrowerCity, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" MaxLength="1024" Style="{StaticResource TextBoxWithError}" />
                <Label Grid.Column="0" Grid.Row="11">State</Label>
                <TextBox Grid.Column="1" Grid.Row="11" Text="{Binding BorrowerState, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" MaxLength="64" Style="{StaticResource TextBoxWithError}" />
                <Label Grid.Column="0" Grid.Row="12">Postal Code</Label>
                <TextBox Grid.Column="1" Grid.Row="12" Text="{Binding BorrowerPostalCode, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" MaxLength="128" Style="{StaticResource TextBoxWithError}" />
                <Label Grid.Column="0" Grid.Row="13">Identification</Label>
                <fa:ImageAwesome Grid.Column="1" Grid.Row="13" Icon="CircleOutlineNotch" Spin="True" Height="24" Width="24" Visibility="{Binding BusyLoadingBorrowerCardVisibility}" Foreground="Navy" HorizontalAlignment="Left" />
                <Border Grid.Column="1" Grid.Row="13" BorderBrush="DarkGray" BorderThickness="1" Padding="1" HorizontalAlignment="Left">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding BorrowerIdentificationImage}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Image Source="{Binding BorrowerIdentificationImage}" MinWidth="80" MinHeight="60" MaxWidth="800" MaxHeight="600"/>
                </Border>                
                <Label Grid.Column="0" Grid.Row="14" Grid.ColumnSpan="99" Style="{StaticResource SubHeader}">Primary Borrower Employment</Label>
                <Label Grid.Column="0" Grid.Row="15">Employer Name</Label>
                <TextBox Grid.Column="1" Grid.Row="15" Text="{Binding BorrowerEmployerName, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" MaxLength="1024" Style="{StaticResource TextBoxWithError}" />
                <Label Grid.Column="0" Grid.Row="16">Hire/Start Date</Label>
                <TextBox Grid.Column="1" Grid.Row="16" Text="{Binding BorrowerEmploymentHireDate, StringFormat='yyyy-MM-dd', ValidatesOnDataErrors=True, NotifyOnValidationError=True, TargetNullValue=''}" MaxLength="10" Style="{StaticResource TextBoxWithError}" />
                <Label Grid.Column="0" Grid.Row="17">Annual Income</Label>
                <TextBox Grid.Column="1" Grid.Row="17" Text="{Binding BorrowerIncome, StringFormat='###,###,###,##0.00#', ValidatesOnDataErrors=True, NotifyOnValidationError=True, TargetNullValue=''}" MaxLength="128" Style="{StaticResource TextBoxWithError}" />
                <Label Grid.Column="0" Grid.Row="18" Grid.ColumnSpan="99" Style="{StaticResource SubHeader}">Expenses</Label>
                <Label Grid.Column="0" Grid.Row="19">Monthly Mortgage Payment</Label>
                <TextBox Grid.Column="1" Grid.Row="19" Text="{Binding MortgagePayment, StringFormat='###,###,###,##0.00#', ValidatesOnDataErrors=True, NotifyOnValidationError=True, TargetNullValue=''}" MaxLength="128" Style="{StaticResource TextBoxWithError}" />
                <Label Grid.Column="0" Grid.Row="20">Monthly Rent Payment</Label>
                <TextBox Grid.Column="1" Grid.Row="20" Text="{Binding RentPayment, StringFormat='###,###,###,##0.00#', ValidatesOnDataErrors=True, NotifyOnValidationError=True, TargetNullValue=''}" MaxLength="128" Style="{StaticResource TextBoxWithError}" />
                <Label Grid.Column="0" Grid.Row="21" Grid.ColumnSpan="99" Style="{StaticResource SubHeader}">Co-Borrower</Label>
                <Label Grid.Column="0" Grid.Row="22">Co-Borrower Name</Label>
                <TextBox Grid.Column="1" Grid.Row="22" Text="{Binding CoBorrowerName, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" MaxLength="1024" Style="{StaticResource TextBoxWithError}" />
                <Label Grid.Column="0" Grid.Row="23">Birth Date</Label>
                <TextBox Grid.Column="1" Grid.Row="23" Text="{Binding CoBorrowerBirthDate, StringFormat='yyyy-MM-dd', ValidatesOnDataErrors=True, NotifyOnValidationError=True, TargetNullValue=''}" MaxLength="10" Style="{StaticResource TextBoxWithError}" />
                <Label Grid.Column="0" Grid.Row="24">Email</Label>
                <TextBox Grid.Column="1" Grid.Row="24" Text="{Binding CoBorrowerEmailAddress, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" MaxLength="1024" Style="{StaticResource TextBoxWithError}" />
                <Label Grid.Column="0" Grid.Row="25">Phone</Label>
                <TextBox Grid.Column="1" Grid.Row="25" Text="{Binding CoBorrowerPhone, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" MaxLength="64" Style="{StaticResource TextBoxWithError}" />
                <Label Grid.Column="0" Grid.Row="26">Address</Label>
                <TextBox Grid.Column="1" Grid.Row="26" Text="{Binding CoBorrowerAddress, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" MaxLength="1024" Style="{StaticResource TextBoxWithError}" />
                <Label Grid.Column="0" Grid.Row="27">City</Label>
                <TextBox Grid.Column="1" Grid.Row="27" Text="{Binding CoBorrowerCity, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" MaxLength="1024" Style="{StaticResource TextBoxWithError}" />
                <Label Grid.Column="0" Grid.Row="28">State</Label>
                <TextBox Grid.Column="1" Grid.Row="28" Text="{Binding CoBorrowerState, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" MaxLength="64" Style="{StaticResource TextBoxWithError}" />
                <Label Grid.Column="0" Grid.Row="29">Postal Code</Label>
                <TextBox Grid.Column="1" Grid.Row="29" Text="{Binding CoBorrowerPostalCode, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" MaxLength="128" Style="{StaticResource TextBoxWithError}" />
                <Label Grid.Column="0" Grid.Row="30" Grid.ColumnSpan="99" Style="{StaticResource SubHeader}">Co-Borrower Employment</Label>
                <Label Grid.Column="0" Grid.Row="31">Employer Name</Label>
                <TextBox Grid.Column="1" Grid.Row="31" Text="{Binding CoBorrowerEmployerName, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" MaxLength="1024" Style="{StaticResource TextBoxWithError}" />
                <Label Grid.Column="0" Grid.Row="32">Hire/Start Date</Label>
                <TextBox Grid.Column="1" Grid.Row="32" Text="{Binding CoBorrowerEmploymentHireDate, StringFormat='yyyy-MM-dd', ValidatesOnDataErrors=True, NotifyOnValidationError=True, TargetNullValue=''}" MaxLength="10" Style="{StaticResource TextBoxWithError}" />
                <Label Grid.Column="0" Grid.Row="33">Annual Income</Label>
                <TextBox Grid.Column="1" Grid.Row="33" Text="{Binding CoBorrowerIncome, StringFormat='###,###,###,##0.00#', ValidatesOnDataErrors=True, NotifyOnValidationError=True, TargetNullValue=''}" MaxLength="128" Style="{StaticResource TextBoxWithError}" />
                <Label Grid.Column="0" Grid.Row="34">Comments</Label>
                <ItemsControl Grid.Column="1" Grid.Row="34" ItemsSource="{Binding Comments}" Margin="0,5">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="DarkGray" BorderThickness="0,1,0,0">
                                <StackPanel>
                                    <TextBlock>
                                            <TextBlock Text="{Binding CreateTimestamp, StringFormat='yyyy-MM-dd'}"/>
                                            <TextBlock Text="{Binding UserName}" />
                                        </TextBlock>
                                    <TextBlock Margin="5,0" Text="{Binding Text}" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Label Grid.Column="0" Grid.Row="35">Add Comment</Label>
                <TextBox Grid.Column="1" Grid.Row="35" Text="{Binding NewCommentText, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" AcceptsReturn="True" MinHeight="40" MaxLength="1024" Style="{StaticResource TextBoxWithError}" />
                <CheckBox Grid.Column="1" Grid.Row="36" IsChecked="{Binding NewCommentIsPublic}">Is Public</CheckBox>
                <Button Grid.Column="1" Grid.Row="37" HorizontalAlignment="Left" Padding="2,2" Margin="0,5" Command="{Binding CreateComment}" CommandParameter="{Binding .}">Add Comment</Button>
            </Grid>
        </ScrollViewer>
    </DockPanel>
</Page>
